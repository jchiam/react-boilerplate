{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "dist",
    "typeRoots": [
      "typings/**/*",
      "node_modules/@types"
    ],
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictFunctionTypes": false
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
