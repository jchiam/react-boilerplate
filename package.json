{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "React boilerplate for personal use",
  "main": "index.js",
  "author": "Jonathan Chiam",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "stage": "yarn build && firebase serve",
    "deploy": "yarn build && firebase deploy",
    "lint-ts": "tslint -c tslint.json --project tsconfig.json",
    "lint-js": "eslint src --ext .jsx",
    "lint-scss": "sass-lint style/*.scss -v -q",
    "lint": "npm run lint-ts && npm run lint-js && npm run lint-scss",
    "lint-fix": "npm run lint-ts --fix && npm run lint-js --fix && npm run lint-scss",
    "prepush": "yarn lint"
  },
  "dependencies": {
    "async": "^2.6.0",
    "axios": "^0.18.0",
    "firebase": "^4.13.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^10.0.3",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/react-redux": "^5.0.19",
    "@types/react-router": "^4.0.24",
    "@types/redux-logger": "^3.0.6",
    "@types/webpack-env": "^1.13.6",
    "autoprefixer": "^8.4.1",
    "awesome-typescript-loader": "^5.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "import-glob-loader": "^1.1.0",
    "node-sass": "^4.9.0",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "path": "^0.12.7",
    "postcss-loader": "^2.1.4",
    "react-hot-loader": "4.1.2",
    "redux-logger": "^3.0.6",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "tslint": "^5.10.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-dotenv-plugin": "^2.0.2",
    "webpack-merge": "^4.1.2"
  }
}
